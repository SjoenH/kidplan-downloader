{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "Kidplan Downloader",
  "version": "1.1.0",
  "identifier": "com.kidplan.downloader",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Kidplan Downloader",
        "width": 960,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "dialog:allow-open",
            "store:allow-get",
            "store:allow-set",
            "store:allow-delete",
            "store:allow-save",
            "store:allow-load",
            "os:allow-locale",
            "updater:default"
          ]
        }
      ]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/SjoenH/kidplan-downloader/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgwNEI1QTU5MTVFREEzNTgKUldSWW8rMFZXVnBMZ0tvcnRhOUl6dmc2VG9uSFh3dmJwTGNUOGVHbjFxV1Q4RndTYWpJUEhRRTMK"
    }
  }
}
